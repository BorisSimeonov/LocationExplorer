@model PagedArticleListingServiceModel

@{
    ViewData["Title"] = "Articles List";
}

<div page-model="@Model.PagingInfo" page-action="All" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-success" class="btn-group pull-right bottom-margin-10">
</div>

<table class="table table-bordered table-striped table-hover table-responsive text-center">
    <thead>
        <tr>
            <th class="text-center text-info">Title</th>
            <th class="text-center text-info">Author Username</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Articles)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.AuthorUsername</td>
                <td>
                    <a asp-area=""
                       asp-controller="Article"
                       asp-action="Details"
                       asp-route-id="@a.Id"
                       class="btn btn-success">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
