@using LocationExplorer.Domain.Models
@using Microsoft.AspNetCore.Identity
@using LocationExplorer.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="sidebar-nav-list-item">My Profile</a>
    </li>
    <li>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="btn btn-default btn-block">Log Out</button>
        </form>
    </li>
}
else
{
    <li><a asp-area="" asp-controller="Account" asp-action="Register" class="sidebar-nav-list-item">Register</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login" class="sidebar-nav-list-item">Log in</a></li>
}
