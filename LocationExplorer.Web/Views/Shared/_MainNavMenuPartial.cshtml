@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="nav sidebar-nav text-center">
    @if (SignInManager.IsSignedIn(User))
            {
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="link-item-box green-border">
                <span class="glyphicon glyphicon-search span-menu-glyphicon"></span>
                <span class="span-menu-text">Search Options</span>
            </a>
        </li>
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" class="link-item-box green-border">
                        <span class="glyphicon glyphicon-user span-menu-glyphicon"></span>
                        <span class="span-menu-text">My Profile</span>
                    </a>
                </li>
        if (User.IsInRole(DataConstants.WriterRole))
        {
            <li>
                <a asp-area="Writer" asp-controller="Home" asp-action="Index" class="link-item-box yellow-border">
                    <span class="glyphicon glyphicon-folder-open span-menu-glyphicon"></span>
                    <span class="span-menu-text">Writer Panel</span>
                </a>
            </li>
        }
        if (User.IsInRole(DataConstants.AdministratorRole))
        {
            <li>
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="link-item-box orange-border">
                    <span class="glyphicon glyphicon-text-background span-menu-glyphicon"></span>
                    <span class="span-menu-text">Admin Panel</span>
                </a>
            </li>
        }
        <li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-default btn-block link-item-box orange-border">
                    <span class="glyphicon glyphicon-log-out span-menu-glyphicon"></span>
                    <span class="span-menu-text">Log Out</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="link-item-box green-border">Register</a></li>
                <li><a asp-area="" asp-controller="Account" asp-action="Login" class="link-item-box green-border">Log in</a></li>
    }
</ul>