@model PagedUserListingServiceModel

@{
    ViewData["Title"] = "Users List";
}

<div page-model="@Model.PagingInfo" page-action="All" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-success" class="btn-group pull-right bottom-margin-10">
</div>
<table class="table table-bordered table-striped table-hover table-responsive text-center">
    <thead>
        <tr>
            <th class="text-center text-info">Username</th>
            <th class="text-center text-info">Full Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@($"{user.FirstName} {user.LastName}".Trim())</td>
                <td>
                    <a asp-area="Admin"
                       asp-controller="Users"
                       asp-action="EditRoles"
                       asp-route-id="@user.Id"
                       class="btn btn-primary">
                        Edit Roles
                    </a>
                </td>
                <td>
                    <form method="post"
                          asp-area="Admin"
                          asp-controller="Users"
                          asp-action="Delete"
                          asp-route-id="@user.Id">
                        <div class="form-group">
                            <input type="submit" name="name" value="Delete" class="btn btn-danger" />
                        </div>
                    </form>
                    @*<a asp-area="Admin"
                       asp-controller="Users"
                       asp-action="Delete"
                       asp-route-id="@user.Id"
                       class="btn btn-primary">
                        Delete User
                    </a>*@
                </td>
            </tr>
        }
    </tbody>
</table>