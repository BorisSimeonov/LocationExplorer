@model UserRolesEditViewModel

@{
    ViewData["Title"] = "User Roles Edit";
}

<div>
    <h3 class="text-center text-info">@Model.Username.ToUpper()</h3>
</div>
<div>
    <div class="text-info">Name:</div>
    <div>@($"{Model.FirstName} {Model.LastName}".Trim())</div>
    <div class="text-info">E-Mail:</div>
    <div>@Model.Email</div>
    <div class="text-info">Assigned Roles (@Model.UserRoles.Count()):</div>
    <div>@(string.Join(", ", Model.UserRoles))</div>
</div>
<h4 class="text-center text-info">Role Actions:</h4>
<div>
    <form asp-area="Admin" asp-controller="Users" asp-action="AddRole" method="post">
        <input type="hidden" name="UserId" value="@Model.Id" />
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <select asp-items="Model.AllRoles" name="role" class="form-control"></select>
        </div>
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <input type="submit" class="btn btn-success btn-form" value="Add Role" />
        </div>
    </form>
</div>

<div>
    <form asp-area="Admin" asp-controller="Users" asp-action="RemoveRole" method="post">
        <input type="hidden" name="UserId" value="@Model.Id" />
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <select asp-items="Model.AllRoles" name="role" class="form-control"></select>
        </div>
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <input type="submit" class="btn btn-danger btn-form" value="Remove Role" />
        </div>
    </form>
</div>