@model GalleryPicturesViewModel

@{
    ViewData["Title"] = "Upload pictures to gallery";
}

<div class="row">
    <div class="col-md-12 text-center">
        <form asp-area="Writer" enctype="multipart/form-data" asp-controller="Gallery" asp-action="AddPictures" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pictures"></label>
                <input type="file" name="Pictures" multiple class="form-control" accept="image/*" />
                <span asp-validation-for="Pictures" class="text-danger"></span>
            </div>
            <input name="galleryId" value="@Model.GalleryId" hidden />
            <button type="submit" class="btn btn-success btn-form upload-missing">Upload</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}